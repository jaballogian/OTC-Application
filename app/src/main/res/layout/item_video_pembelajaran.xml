<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectangle_white_full_rounded_shadow"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/itemVideoImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/rectangle_orange_full_rounded_10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/namaCoursetTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hanya_test"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/namaBidangTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hanya_test"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/namaCoursetTextView"
        app:layout_constraintLeft_toRightOf="@+id/itemVideoImageView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_orange_full_rounded_5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"/>

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="5dp"
        android:layout_height="25dp"
        android:background="@color/light_orange"
        app:layout_constraintLeft_toRightOf="@+id/namaBidangTextView"
        app:layout_constraintTop_toBottomOf="@+id/namaCoursetTextView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/jumlahVideoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hanya_test"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/namaCoursetTextView"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>